<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/setalarm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#106bb9"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/cell_padding_bottom">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="222dp"
                android:layout_height="45dp"
                android:gravity="center" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="6dp"
                android:scaleType="center"
                android:src="@drawable/tt_top_back" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#106bb9"
        android:paddingBottom="20dp">

        <com.example.jogle.calendar.JGArcView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/arc_view" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/dot_blue"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本月过去"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="#ffce3a" />

                <TextView
                    android:id="@+id/passed_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:textColor="#f39c11" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="#ffce3a" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/imageView8"
                    android:src="@drawable/dot_blue"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="外勤签到"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="#ffce3a" />

                <TextView
                    android:id="@+id/out_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:textColor="#f39c11" />

                <TextView
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="#ffce3a" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/imageView9"
                    android:src="@drawable/dot_blue"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考勤签到"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="#ffce3a" />

                <TextView
                    android:id="@+id/in_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:textColor="#f39c11" />

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="#ffce3a" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/cell_padding_bottom"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp">

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出勤率"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:textColor="#ffce3a" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/signed_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N/A"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30sp"
                    android:textColor="#ffce3a" />

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/content_font_size"
                    android:textColor="#ffce3a" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/cell_padding_bottom">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:id="@+id/imageView3"
                android:src="@drawable/calendar_left"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/show_year_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:paddingTop="1dip"
                android:text="2014"
                android:textColor="#80000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:paddingTop="1dip"
                android:text="年 "
                android:textColor="#80000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/show_month_view"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:text="7月"
                android:textColor="#ff000000"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="12dp"
                android:id="@+id/imageView4"
                android:layout_marginLeft="10dp"
                android:src="@drawable/calendar_right"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:background="#fffffe"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="#20000000" >
        </View>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_marginBottom="2dip"
            android:layout_marginTop="2dip" >

            <TableRow>

                <TextView
                    style="@style/dateStyle"
                    android:text="日"
                    android:textColor="@color/date_1" />

                <TextView
                    style="@style/dateStyle"
                    android:text="一"
                    android:textColor="@color/date_2" />

                <TextView
                    style="@style/dateStyle"
                    android:text="二"
                    android:textColor="@color/date_2" />

                <TextView
                    style="@style/dateStyle"
                    android:text="三"
                    android:textColor="@color/date_2" />

                <TextView
                    style="@style/dateStyle"
                    android:text="四"
                    android:textColor="@color/date_2" />

                <TextView
                    style="@style/dateStyle"
                    android:text="五"
                    android:textColor="@color/date_2" />

                <TextView
                    style="@style/dateStyle"
                    android:text="六"
                    android:textColor="@color/date_1" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:background="#20000000" >
        </View>
    </LinearLayout>
    <RelativeLayout
   		 android:id="@+id/contentPager" 
    	 android:layout_width="fill_parent"
       	 android:layout_height="fill_parent"
         android:layout_weight="1"
         android:background="#fffffe">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="15dip"
            android:paddingRight="10dip"
            android:background="#F7F7F7" >
        </android.support.v4.view.ViewPager>

        <SlidingDrawer
            android:id="@+id/sildingDrawer"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/viewpager"
            android:handle="@+id/handlerText"
            android:content="@+id/contentText">

            <LinearLayout
                android:id="@+id/handlerText"
                android:layout_height="wrap_content"
                android:minHeight="60dip"
                android:background="#fffffe"
                android:layout_width="fill_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="#30000000" >
                </View>

                <TextView
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="向上滑动以显示详细"
                android:textSize="16sp"
                android:textColor="#90000000"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentText"
                android:background="#fffffe"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout13"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/in_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/cell_padding_left"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:id="@+id/imageView5"
                            android:src="@drawable/dot_yellow"
                            android:layout_marginTop="3dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <LinearLayout
                                android:id="@+id/linearLayout8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/in_sign_in_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="暂无数据"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/in_sign_in_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="@dimen/content_font_size"
                                    android:singleLine="true"
                                    android:layout_weight="0.5" />

                                <TextView
                                    android:id="@+id/textView21"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="考勤签到"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_weight="1"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/in_sign_out_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="暂无数据"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/in_sign_out_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="@dimen/content_font_size"
                                    android:singleLine="true"
                                    android:layout_weight="0.5" />

                                <TextView
                                    android:id="@+id/textView24"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="考勤签退"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_weight="1"
                                    android:gravity="right" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/out_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/cell_padding_left"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:id="@+id/imageView6"
                            android:src="@drawable/dot_green"
                            android:layout_marginTop="3dp" />

                        <LinearLayout
                            android:id="@+id/linearLayout11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp">

                            <LinearLayout
                                android:id="@+id/linearLayout21"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/out_sign_in_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="暂无数据"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="0.33"
                                    android:singleLine="true" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="外勤往程"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_weight="1"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/out_sign_out_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="暂无数据"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="0.33"
                                    android:singleLine="true" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="外勤返程"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="@dimen/content_font_size"
                                    android:layout_weight="1"
                                    android:gravity="right" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        
        </SlidingDrawer>

    </RelativeLayout>

</LinearLayout>